package logica;
import java.math.*;
public class Seccion {

	private Ventana[][] etapa;
	
	public Seccion() {
		this.etapa = new Ventana[5][3];
		Posicion posi;
		for (int x = 0; x < 4; x++) {
			for (int y = 0; y < 2; y++) {
				posi = new Posicion(x, y);
				if ((x == 2) && ((y == 0) || (y == 1))) {
					this.etapa[x][y] = new VentanaSemicircular(posi, (y == 0));
				} else {
					double r = Math.random();
					if (r < 0.70) {
						this.etapa[x][x] = new VentanaNormal(posi);
					} else {
						this.etapa[x][y] = new VentanaConHojas(posi);
					}
				}
			}
		}
	};
	
	public void nuevaEtapa(){};
}
