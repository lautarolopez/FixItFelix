package logica;
public class VentanaSemicircular extends Ventana {

	public VentanaSemicircular (Posicion pos, boolean x) {
		super(pos);
		Estado a = new Estado();
		Estado b = new Estado();
		Estado c = new Estado();
		Estado d = new Estado();
		if (x) {
			this.salud = new Estado[4];
			
		} else {
			this.salud = new Estado [8];
			Estado e = new Estado();
			Estado f = new Estado();
			Estado g = new Estado();
			Estado h = new Estado();
			this.salud[4] = e;
			this.salud[5] = f;
			this.salud[6] = g;
			this.salud[7] = h;
		}
		this.salud[0] = a;
		this.salud[1] = b;
		this.salud[2] = c;
		this.salud[3] = d;
	}
}
